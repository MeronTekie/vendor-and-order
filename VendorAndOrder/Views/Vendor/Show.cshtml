<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jobs Here</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>
<body>
  @using VendorAndOrder.Models;

  <h1>Current Jobs</h1>

  @if (Model.Count == 0)
  {
    <p>There are no any orders yet.</p>
  }
  <ul>
    @foreach (Order order in Model)
    {
      <li>
        The order name: @order.Name.ToUpper() <br>
        Total Number of Bread: @order.BreadNum <br>
        Total Number of Pastry: @order.PastryNum <br>
        The total price: @order.Price
      </li>
    }
  </ul>
  <a href='/vendor/new'>Post a Job Today!</a>
  <a href='/show'>View Job Postings.</a>
</body>
</html>